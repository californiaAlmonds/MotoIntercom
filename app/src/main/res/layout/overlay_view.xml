<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Main FAB Button -->
    <FrameLayout
        android:id="@+id/btnMain"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="bottom|center_horizontal"
        android:elevation="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_fab_gradient"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/iconMain"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_mic"
            android:tint="@color/white"/>
    </FrameLayout>

    <!-- Expandable Menu Items Container -->
    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp">

        <!-- Mic Switch Button -->
        <FrameLayout
            android:id="@+id/btnSwitch"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_glass_circle"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iconMic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_headset_wired"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/textMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rider"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp"
                android:background="#80000000"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"/>
        </FrameLayout>

        <!-- Mute Button -->
        <FrameLayout
            android:id="@+id/btnMute"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_glass_circle"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/iconMute"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_volume_off"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/textMute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mute"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp"
                android:background="#80000000"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"/>
        </FrameLayout>

        <!-- Stop Button -->
        <FrameLayout
            android:id="@+id/btnStop"
            android:layout_width="56dp"
            android:layout_height="56dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_glass_circle"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_stop"
                android:tint="@color/accent_danger"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="2dp"
                android:background="#80000000"
                android:paddingHorizontal="4dp"
                android:paddingVertical="1dp"/>
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
